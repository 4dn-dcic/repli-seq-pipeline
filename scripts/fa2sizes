awk '{
      if($0~">"){
        if(length(chrom)!=0){
          print chrom,clen
        }
        chrom=$1;
        clen=0
       } else{
        clen+=length($0)
       }
      } END{
        print chrom,clen
    }' OFS='\t' $CHROMSIZES | tr -d '>' | sort -m -k1,1 > genome.chrom.sizes
    CHROMSIZES="genome.chrom.sizes"
